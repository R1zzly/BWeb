    <div id="form-main">
        <div id="form-div">
            <form class="form" id="form1" method="post">
                <% if(ErrorsArr){%>
                    <% ErrorsArr.forEach(error=>{ %>
                        <div class="alert alert-danger" role="alert">
                            <%=error.msg%>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span> 
                          </button>
                        </div>

                        <% }) }%>
                            <h1 class="ra">Log In</h1>

                            <p class="email">
                                <input name="email" type="email" required="required" class="feedback-input" id="email" placeholder="Email" />
                            </p>

                            <p class="password">
                                <input name="password" class="feedback-input" required="required" id="password" placeholder="Password" type="password" />
                                <span id="StrengthDisp" class="badge displayBadge"> </span>
                            </p>
                            <div class="submit">
                                <button type="submit" formmethod="post" value="Create" id="button-blue">Log In    </button>
                            </div>

            </form>

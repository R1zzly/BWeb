<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="w-100 d-flex flex-column align-items-center">
        <h3 class="text-black">Admin page</h3>
        <div class="filter">
            <a href="/admin_page/name">
               Username
           </a>
            <a href="/admin_page/email">email</a>
            <a href="/admin_page/password">password</a>
        </div>
    </div>
    <div class="container container-dark">
        <%let i = 1%>
            <%users.forEach((user)=>{ %>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">
                                <%=i++%>
                            </th>
                            <td>
                                <div contenteditable>
                                    <%=user.name%>
                                </div>
                            </td>
                            <td>
                                <div contenteditable>
                                    <%=user.email%>
                                </div>
                            </td>
                            <td>
                                <div contenteditable>
                                    <%=user.password%>
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-primary" method="post"><a class="text-white"href="admin_page/edit/<%=user.email%>">edit</a></button>
                                <button class="btn btn-danger" method="post"><a class="text-white"href="admin_page/delete/<%=user.name%>">delete</a></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <%})%>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>

</html>